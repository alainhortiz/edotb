<div class="modal fade" id="editBaciloscopiaSeguimiento" data-backdrop="static" data-keyboard=false tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header mh" style="background-color: #717070; color: whitesmoke;">
                <span class="glyphicon glyphicon-user" style="font-size: 20px"></span>
                <h4 class="modal-title" style="display: inline-block; margin-left: 5px">Editar Baciloscopía</h4>
            </div>
            <div class="modal-body">
                <div id="errorEditBaciloscopia" class="alert alert-danger hidden"  role="alert">
                    <div class="container"></div>
                </div>
                <form>
                    <div class="row" >
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="form-group">
                                <label class="control-label " for="baciloscopiaEdit">Resultado de la Baciloscopía:</label>
                                <select class="form-control input-sm" id="baciloscopiaEdit" name="baciloscopiaEdit">
                                    {% for baciloscopia in  baciloscopias %}
                                        <option value="{{ baciloscopia.clasificacion }}">{{ baciloscopia.descripcion~' ('~baciloscopia.clasificacion~')' }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="form-group">
                                <label class="control-label " for="fechaBaciloscopiaEdit">Fecha:</label>
                                <div>
                                    <input type="date" disabled  id="fechaBaciloscopiaEdit" name="fechaBaciloscopiaEdit">
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="form-group">
                                <label class="control-label"  for="categoriaEditBaciloscopia">Categoría:</label>
                                <input type="text" disabled  class="form-control" name="categoriaEditBaciloscopia" id="categoriaEditBaciloscopia">
                            </div>
                        </div>
                    </div >
                    <div class="modal-footer">
                        <input type="button" class="btn btn-primario" id="maceptarEditBaciloscopia"  value="ACEPTAR" >
                        <input type="button" class="btn btn-primario" id="mcerrar" value="CERRAR" data-dismiss="modal" style="cursor: default">
                    </div>
                </form>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>