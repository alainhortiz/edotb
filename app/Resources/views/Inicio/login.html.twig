{% extends 'base.html.twig' %}

{% block body %}
    <div class="container login-wrapper">
        <h3 class="text-center" style="margin-bottom: 0">Registro Nacional de Casos de</h3> <h1 style="font-weight: bold;  color: #70cbb1" class="text-center">T U B E R C U L O S I S</h1>
        <div class="login-wrapper-inner">
            <div class="row">
                <div class="col-lg-12">
                    <p style="text-align: center">
                        <img src="{{ asset('img/logo.png')}}" style="width: 120px; margin-bottom: 20px">
                    </p>
                    <div class="col-lg-12">
                        <form id="loginForm" method="post" action="{{ path('login_check') }}">
                            {% if error %}
                                <div class="alert alert-danger">
                                    <p>
                                        <strong>Credenciales inválidas</strong>
                                    </p>
                                </div>
                            {% endif %}
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Usuario" name="_username" value="{{ last_username }}" id="username" autofocus required>
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" placeholder="Contraseña" name="_password" id="password" required>
                            </div>
                            <input type="hidden" name="_target_path" value="/inicio" />
                        </form>
                    </div>
                </div>
            </div>
            <div class="text-center" style="margin-top: 20px">
                <input type="submit" class="submit" value="ACEPTAR" id="ok" form="loginForm" >
            </div>
        </div>
        <div class="login-wrapper-menu">
            <img src="{{ asset('img/mano.png')}}" class="whirl" style="width: 198px; margin: auto">
            <section class="text-center" style="margin-top: 20px; background: #2e2e2b; color: whitesmoke;padding: 2px; border: 3px solid #888885">
                <h3 style="font-size: 25px">FIN DE LA</h3>
                <h1 style="font-size: 65px; font-weight: bold">TB</h1>
            </section>
        </div>
    </div>
    <div class="text-center">
        <div style="padding: 5px; background: #474744; color: whitesmoke; width: 200px; margin: auto">
            <small><strong>CEDISAP&copy; 2017</strong></small><br>
            <small>Todos los Derechos Reservados</small>
        </div>
    </div>
{% endblock %}
