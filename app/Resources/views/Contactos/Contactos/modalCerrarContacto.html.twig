<div class="modal fade" id="modalCerrarContacto"  tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header mh" style="background-color: #717070; color: whitesmoke;">
                <span class="glyphicon glyphicon-user" style="font-size: 20px"></span>
                <h4 class="modal-title" style="display: inline-block; margin-left: 5px">Cerrar contacto</h4>
            </div>
            <div class="modal-body">
                <div id="errorBaciloscopia" class="alert alert-danger hidden"  role="alert">
                    <div class="container"></div>
                </div>
                <form>
                    <div class="row" >
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="form-group">
                                <label class="control-label " for="motivo">Seleccione un motivo:</label>
                                <select class="form-control input-sm" id="motivo" name="motivo">
                                    <option value="0">Seleccione un motivo</option>
                                    {% for motivo in  motivos %}
                                        <option value="{{ motivo.id }}">{{ motivo.nombre }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    </div >
                    <div class="modal-footer">
                        <input type="button" class="btn btn-primario aceptarMotivo" value="ACEPTAR" >
                        <input type="button" class="btn btn-primario salir" value="CERRAR" data-dismiss="modal" style="cursor: default">
                    </div>
                </form>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>
