<div class="modal fade" id="addCultivoSeguimiento" data-backdrop="static" data-keyboard=false tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header mh" style="background-color: #717070; color: whitesmoke;">
                <span class="glyphicon glyphicon-user" style="font-size: 20px"></span>
                <h4 class="modal-title" style="display: inline-block; margin-left: 5px">Nuevo Cultivo</h4>
            </div>
            <div class="modal-body">
                <div id="errorCultivo" class="alert alert-danger hidden"  role="alert">
                    <div class="container"></div>
                </div>
                <form>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="form-group">
                                <label class="control-label " for="cultivoAdd">Codificación del Cultivo:</label>
                                <select class="form-control input-sm" id="cultivoAdd" name="cultivoAdd">
                                    <option value="vacio">Seleccione una codificación</option>
                                    {% for cultivo in  cultivos %}
                                        <option value="{{ cultivo.clasificacion }}">{{ cultivo.descripcion~' ('~cultivo.clasificacion~')' }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="form-group">
                                <label class="control-label " for="salidaCultivoAdd">Resultado del Cultivo:</label>
                                <select class="form-control input-sm" id="salidaCultivoAdd" name="salidaCultivoAdd">
                                    <option value="vacio">Seleccione un resultado</option>
                                    {% for salidaCultivo in  salidasCultivo %}
                                        <option value="{{ salidaCultivo.salida }}">{{  salidaCultivo.salida  }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        {% set fechaMin = evolucion.fechaNotificacion|date('Y-m-d')  %}
                        {% if evolucion.cultivoSeguimientos|length != 0 %}
                            {% set lastCultivo = evolucion.cultivoSeguimientos[(evolucion.cultivoSeguimientos|length) - 1] %}
                            {% set fechaMin = lastCultivo.fecha|date('Y-m-d') %}
                        {% endif %}
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="form-group">
                                <label class="control-label " for="fechaCultivoAdd">Fecha:</label>
                                <div>
                                    <input type="date" min="{{ fechaMin }}" max="{{ 'now'|date('Y-m-d') }}"  id="fechaCultivoAdd" name="fechaCultivoAdd">
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="form-group">
                                <label class="control-label"   for="categoriaCultivo">Categoría:</label>
                                <input type="text" disabled value="{{ categoriaCultivo }}" class="form-control" name="categoriaCultivo" id="categoriaCultivo">
                            </div>
                        </div>
                    </div >
                    <div class="modal-footer">
                        <input type="button" class="btn btn-primario" id="maceptarAddCultivo"  value="ACEPTAR" >
                        <input type="button" class="btn btn-primario" id="mcerrar" value="CERRAR" data-dismiss="modal" style="cursor: default">
                    </div>
                </form>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>