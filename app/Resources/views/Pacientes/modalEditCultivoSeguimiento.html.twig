<div class="modal fade" id="editCultivoSeguimiento" data-backdrop="static" data-keyboard=false tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header mh" style="background-color: #717070; color: whitesmoke;">
                <span class="glyphicon glyphicon-user" style="font-size: 20px"></span>
                <h4 class="modal-title" style="display: inline-block; margin-left: 5px">Nuevo Cultivo</h4>
            </div>
            <div class="modal-body">
                <div id="errorCultivoEdit" class="alert alert-danger hidden"  role="alert">
                    <div class="container"></div>
                </div>
                <form>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="form-group">
                                <label class="control-label " for="cultivoEdit">Codificación del Cultivo:</label>
                                <select class="form-control input-sm" id="cultivoEdit" name="cultivoEdit">
                                    <option value="vacio">Seleccione una codificación</option>
                                    {% for cultivo in  cultivos %}
                                        <option value="{{ cultivo.clasificacion }}">{{ cultivo.descripcion~' ('~cultivo.clasificacion~')' }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="form-group">
                                <label class="control-label " for="salidaCultivoEdit">Resultado del Cultivo:</label>
                                <select class="form-control input-sm" id="salidaCultivoEdit" name="salidaCultivoEdit">
                                    <option value="vacio">Seleccione un resultado</option>
                                    {% for salidaCultivo in  salidasCultivo %}
                                        <option value="{{ salidaCultivo.salida }}">{{  salidaCultivo.salida  }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="form-group">
                                <label class="control-label " for="fechaCultivoEdit">Fecha:</label>
                                <div>
                                    <input type="date" disabled  id="fechaCultivoEdit" name="fechaCultivoEdit">
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="form-group">
                                <label class="control-label"   for="categoriaEditCultivo">Categoría:</label>
                                <input type="text" disabled  class="form-control" name="categoriaEditCultivo" id="categoriaEditCultivo">
                            </div>
                        </div>
                    </div >
                    <div class="modal-footer">
                        <input type="button" class="btn btn-primario" id="maceptarEditCultivo"  value="ACEPTAR" >
                        <input type="button" class="btn btn-primario" id="mcerrar" value="CERRAR" data-dismiss="modal" style="cursor: default">
                    </div>
                </form>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>